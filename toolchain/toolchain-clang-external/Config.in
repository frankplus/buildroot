if BR2_TOOLCHAIN_CLANG_EXTERNAL

config BR2_TOOLCHAIN_EXTERNAL_SYSROOT_DIR
    string "External toolchain sysroot directory"
    depends on BR2_TOOLCHAIN_CLANG_EXTERNAL
    help
      Specify the sysroot directory for the external Clang toolchain.
      This is needed to correctly locate the headers and libraries
      for the target system.

config BR2_TOOLCHAIN_EXTERNAL_MUSL_SYSROOT_DIR
    string "External toolchain musl sysroot directory"
    depends on BR2_TOOLCHAIN_CLANG_EXTERNAL
    help
      Specify the sysroot directory for the external musl toolchain.
      This is needed to correctly locate the headers and libraries
      for the target system.


endif # BR2_TOOLCHAIN_CLANG_EXTERNAL
